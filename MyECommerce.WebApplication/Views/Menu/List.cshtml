@model List<Category>

@{

    Layout = null;
}

<div class="col-sm-3">
    <div class="left-sidebar">
        <h2>Kategoriler</h2>
        <div class="panel-group category-products">

            @if (Model != null)
            {
                foreach (var item in Model)
                {
                    if (item.ParentId == 0)
                    {
                        <div class="panel panel-default">

                            <div class="panel-heading">
                                <h4 class="panel-title">
                                    <a data-toggle="collapse" data-parent="#accordian" href="#@item.UrlName">
                                        <span class="badge pull-right"><i class="fa fa-plus"></i></span>
                                        @item.Name
                                    </a>
                                </h4>
                            </div>
                            @if (item.ParentId == 0)
                            {
                                <div id="@item.UrlName" class="panel-collapse collapse">
                                    <div class="panel-body">
                                        <ul>
                                            @foreach (var subitem in Model.Where(e => e.ParentId == item.Id))
                                            {
                                                <li><a href="/kategori/@subitem.UrlName">@subitem.Name </a></li>
                                            }

                                        </ul>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                }

            }

        </div><!--/category-products-->




    </div>
</div>

