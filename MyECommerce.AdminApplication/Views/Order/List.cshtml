@model IEnumerable<Orders>
@{
    ViewBag.Title = "Siparişler ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5></h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>

                    </div>
                </div>
                <div class="ibox-content">

                    <table class="table table-striped table-bordered table-hover dataTables-example" id="categoryList">

                        <thead>
                            <tr>
                                <th>Sipariş Numarası </th>
                                <th>Sipariş Veren Kullanıcı</th>
                                <th>Oluşturma Zamanı</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>

                                    <td>@item.Id</td>
                                    <td>@item.UserId </td>
                                    <td>@item.CreatedDate</td>
                                    <td>
                                        <a href="@Url.Action("Detail","Order",new { id = item.Id })" class="btn btn-warning">Detay</a>

                                    </td>
                                </tr>
                            }
                        </tbody>

                    </table>

                </div>
            </div>
        </div>
    </div>

</div>

