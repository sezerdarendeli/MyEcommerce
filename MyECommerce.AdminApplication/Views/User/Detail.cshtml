@model UserDetailViewModel
@{
    ViewBag.Title = "Kullanıcı Detay";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="wrapper wrapper-content animated fadeInRight">

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">
                <div class="ibox-title">
                    <h5>@ViewBag.Title</h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>
                        <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                            <i class="fa fa-wrench"></i>
                        </a>
                    </div>
                </div>
                <div class="ibox-content">
                    <form method="post" class="form-horizontal">

                        <div class="form-group">
                            <label class="col-sm-2 control-label">Kullanıcı Adı</label>

                            <div class="col-sm-10">
                               <b>@Model.User.UserName</b>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Mail Adres</label>

                            <div class="col-sm-10">
                                <b>@Model.User.EMailAdress</b>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        
                        <div class="form-group">
                            <label class="col-sm-2 control-label">Oluşturulma Zamanı</label>

                            <div class="col-sm-10">
                                <b>@Model.User.CreatedTime</b>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                    
                        
                    </form>
                    <h2>Kullanıcı Siparişleri</h2>
                    <table class="table table-striped table-bordered table-hover dataTables-example" id="categoryList">
                        <thead>
                            <tr>
                                <th>Sipariş Numarası</th>
                                <th>Sipariş Oluşturma Zamanı</th>
                                <th>Sipariş Adresi</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.OrderList)
                            {
                                <tr>

                                    <td>@item.Id</td>
                                    <td>@item.CreatedDate </td>
                                    <td>@item.AddressId</td>
                                    <td>
                                        <a href="@Url.Action("Detail","Orders",new { id = item.Id })" class="btn btn-warning">Detay</a>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
